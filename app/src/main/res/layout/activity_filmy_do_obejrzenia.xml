<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.skretkowicz.kino.Filmy_do_obejrzenia">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILMY DO OBEJRZENIA"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff0000"
        android:background="#828282" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Filmy Obejrzane"
        android:id="@+id/Bfilmyobejrzane"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="89dp"
        android:layout_toLeftOf="@+id/Bdodajpozycje"
        android:layout_toStartOf="@+id/Bdodajpozycje"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dodaj Pozycje"
        android:id="@+id/Bdodajpozycje"
        android:layout_alignBottom="@+id/Bfilmyobejrzane"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/Bfilmyobejrzane" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Edycja"
        android:id="@+id/Bedycja"
        android:layout_alignBottom="@+id/Bdodajpozycje"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignTop="@+id/Bdodajpozycje" />
</RelativeLayout>
