<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILMY OBEJRZANE"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff0000"
        android:background="#828282" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Filmy do Obejrzenia"
        android:id="@+id/Bfilmydoobejrzenia"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/Bdodajpozycje"
        android:layout_centerHorizontal="true"
        android:onClick="onBfilmydoobejrzeniaClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dodaj Pozycje"
        android:id="@+id/Bdodajpozycje"
        android:layout_above="@+id/Bedycja"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:onClick="onBdodajpozycjeClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Edycja"
        android:id="@+id/Bedycja"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:onClick="onBedycjaClick" />
</RelativeLayout>